// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model Users {
    id       Int     @id @default(autoincrement())
    name     String
    email    String  @unique
    password String
    role     Role
    orders   Orders[]
}

enum Role {
    admin
    client
}

model Orders {
    id         Int            @id @default(autoincrement())
    user       Users           @relation(fields: [userId], references: [id])
    userId     Int
    products   ProductOrder[]
    totalValue Decimal
    coupon     Coupon?        @relation(fields: [couponId], references: [id])
    couponId   Int?
}

model Coupon {
    id          Int     @id @default(autoincrement())
    name        String
    description String
    discount    Decimal
    Order       Orders[]
}

model Product {
    id          Int            @id @default(autoincrement())
    name        String
    description String         @db.Text
    price       Decimal
    inventory   Int            @db.UnsignedInt
    categories  Category[]
    images      ProductImage[]
    orders      ProductOrder[]
}

model Category {
    id          Int       @id @default(autoincrement())
    name        String    @unique
    description String?
    products    Product[]
}

model ProductImage {
    id        Int     @id @default(autoincrement())
    filename  String  @unique
    product   Product @relation(fields: [productId], references: [id])
    productId Int
}

model ProductOrder {
    quantity Int
    discount Decimal?

    order     Orders   @relation(fields: [orderId], references: [id])
    orderId   Int
    product   Product @relation(fields: [productId], references: [id])
    productId Int

    @@id([orderId, productId])
}
